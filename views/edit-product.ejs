<html>

<head>
    <%-include('__bootstrap.ejs')%>
</head>

<body>
    <%-include('__header.ejs')%>
        <div class="container mt-4">
            <form action="/product/edit-product" method="post">
                <h2>Product Id : <%=details.id%>
                </h2>
                <input type="hidden" name="id" value="<%=details.id%>" />
                <div class="form-group">
                    <input value="<%=details.name%>" name="name" type="text" placeholder="Enter product name"
                        class="form-control" />
                </div>
                <div class="form-group">
                    <input value="<%=details.cid%>" name="cid" type="text" placeholder="Enter category id"
                        class="form-control" />
                </div>
                <div class="form-group">
                    <input value="<%=details.price%>" name="price" type="text" placeholder="Enter product price"
                        class="form-control" />
                </div>
                <div class="form-group">
                    <button class="btn btn-success" onclick="return confirm('Want to delete ?')">UPDATE</button>
                </div>
            </form>
        </div>
</body>

</html>
